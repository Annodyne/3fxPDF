<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.pleasework" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Incyte Portfolio</name>
    <description>Incyte Portfolio</description>
    <author email="support@phonegap.com" href="http://phonegap.com">3fx</author>
    <content src="index.html" />
    <icon src="icon.png" />
    <access origin="*" />
	  <platform name="ios">
		<icon src="icon.png" width="180" height="180" />
		<allow-intent href="itms:*"/>
		<allow-intent href="itms-apps:*"/>
	  </platform>
  
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="EnableViewportScale" value="true" />
    <preference name="Orientation" value="landscape" />
</widget>
